{{>header}}
{{>navbar}}
<section class="container my-3">
    <div class="d-flex justify-content-end mb-3">
        <a href="/addCustomer" class="btn btn-primary mx-3">Add New customer</a>
    </div>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                      <th>_id</th>
                    <th>name</th>
                    <th>address</th>
                    <th>phone</th>
                    <th>accountNumber</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#if isEmpty}}
                <tr>
                    <td colspan="6" class="bg-danger text-white text-center ">No Customers Yet</td>
                </tr>
                {{else}}
                {{#each data}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.name}}</td>
                      <td>{{this.address}}</td>
                        <td>{{this.phone}}</td>
                          <td>{{this.accountNumber}}</td>
                        

                    <td>
                        <a class="btn btn-primary" href="/single/{{this._id}}">Show</a>
                        <a class="btn btn-warning" href="/addBalance/{{this._id}}">AddBalance</a>
                        <a class="btn btn-danger " href="/withdraw/{{this._id}}">withdraw</a>
                    </td>
                </tr>
                {{/each}}

                {{/if}}
            </tbody>
        </table>
    </div>
</section>
{{>footer}}